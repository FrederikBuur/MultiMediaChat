<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/textMsgContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textMsgContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="normal"

        android:typeface="sans"
        android:maxWidth="@dimen/view_message_width_max"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:paddingStart="@dimen/margin_12"
        android:paddingEnd="@dimen/margin_12"
        android:text="Sample text message..."/>


</FrameLayout>