<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    tools:context=".camera.CameraActivity">

    <ImageView
        android:id="@+id/contentPreviewImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <VideoView
        android:id="@+id/contentPreviewVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <FrameLayout
        android:id="@+id/confirmContentButton"
        android:layout_width="@dimen/input_filed_send_button_size"
        android:layout_height="@dimen/input_filed_send_button_size"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/margin_24"
        android:background="@drawable/shape_circle_btn"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/sendButtonImgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleY="1"
            android:src="@drawable/ic_round_send" />

    </FrameLayout>

</FrameLayout>