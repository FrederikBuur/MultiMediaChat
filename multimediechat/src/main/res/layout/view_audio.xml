<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/audioMsgContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/audioMsgSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sender"
            android:textAlignment="center"
            android:textSize="@dimen/view_message_info_text_size" />

        <LinearLayout
            android:id="@+id/audioMsgLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
                android:id="@+id/audioMsgContentContainer"
                android:layout_width="150dp"
                android:layout_height="@dimen/margin_36"
                android:clickable="true"
                android:focusable="true"
                app:corner_radius="@dimen/view_message_corner_radius">

                <FrameLayout
                    android:id="@+id/audioCurrentTimeIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|bottom"
                    android:alpha="0.2"
                    android:background="@color/textDark" />

                <TextView
                    android:id="@+id/audioLengthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/margin_8" />

                <ImageView
                    android:id="@+id/audioActionImg"
                    android:layout_width="@dimen/margin_36"
                    android:layout_height="@dimen/margin_36"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/ic_play_arrow"
                    app:layout_constraintHorizontal_bias="1" />

            </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>

            <TextView
                android:text="time"
                android:id="@+id/audioMsgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_marginEnd="@dimen/margin_4"
                android:textAlignment="center"
                android:textSize="@dimen/view_message_info_text_size" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>