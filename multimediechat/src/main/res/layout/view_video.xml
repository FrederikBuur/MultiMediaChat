<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vidMsgContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:corner_radius="@dimen/view_message_corner_radius">

    <VideoView
        android:id="@+id/vidMsgContent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_message_width_max"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        />

    <ProgressBar
        android:id="@+id/imgMsgProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:progressDrawable="@color/colorAccent"/>

    <ImageView
        android:id="@+id/vidMsgAction"
        android:layout_width="@dimen/margin_48"
        android:layout_height="@dimen/margin_48"
        android:paddingStart="10dp"
        android:paddingEnd="@dimen/margin_8"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_media_play"
        android:background="@drawable/shape_circle_btn"/>

</com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>