<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
    android:id="@+id/documentContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginBottom="@dimen/margin_4"
        android:paddingEnd="@dimen/margin_12"
        android:paddingStart="0dp">

        <ImageView
            android:id="@+id/documentImageView"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:paddingStart="@dimen/margin_4"
            android:paddingEnd="0dp"
            android:src="@drawable/ic_file"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/documentDescriptionContainer"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:maxWidth="@dimen/margin_96"
            android:layout_gravity="center"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/documentImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:text="here is a sample title to see how it looks"
                android:id="@+id/documentTitle"
                android:textStyle="bold"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/textDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Type"
                android:id="@+id/documentType"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Size"
                android:id="@+id/documentSize"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>